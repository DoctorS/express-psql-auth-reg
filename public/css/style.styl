@import "reset.styl"
borderRadius = 4px
html, body
  width: 100%
  height: 100%

body
  font 12px / 15px Montserrat, Tahoma
  color #222
  background: #dedede

h1, h2, h3
  margin-bottom: 15px

h1
  margin-bottom: 30px

div, p
  margin-bottom: 10px

.top
  margin-bottom: 15px
  display inline-block
  background: #222
  width: 100%

  li
    float: left
    list-style none
    line-height: 24px
    padding: 0 15px

    a
      color #dedede
      text-decoration none

a
  color blue

.ct
  padding: 20px 40px

.error
  color #e8005d

.ok
  color #3c9b39

input
  line-height: 22px
  padding: 0 10px
  border 1px solid #919191
  border-radius borderRadius

button
  border 1px solid #919191
  border-radius borderRadius
  line-height: 22px
  padding: 0 15px
  cursor: pointer

.SignIn, .SignUp
  > div
    margin-bottom: 15px

    > label
      display block
      margin-bottom: 5px

  button
    margin-bottom: 15px
    background: #b7b7b7

    &:hover
      background: #b7b7b7

    &:active
      background: #b7b7b7
